{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/beeee-ks/FIT3179/main/DV2/data_source/country_stats_by_date.csv"
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "bin": {"maxbins":30},
      "field": "created_at",
      "type": "quantitative",
      "title": "Day of the Month",
      "axis": {"format": ""}
      
    },
    "y": {
      "field": "country",
      "type": "nominal",
      "title": "Country"
    },
    "color": {
      "field": "total_tweets",
      "title": "Number of Tweets",
      "scale": {
        "type": "threshold",
        "domain": [300, 600, 1000, 2000, 3000, 6000, 9000],
        "range": ["#e5f1fb", "#cfe2f3", "#9fc5e8", "#6fa8dc", "#3d85c6", "#0b5394", "#073763"]
      }
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "created_at", "type": "quantitative", "title": "Day"},
      {"field": "total_tweets", "type": "quantitative", "title": "Number of Tweets"}
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
