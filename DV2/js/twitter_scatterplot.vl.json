{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
      "url": "https://raw.githubusercontent.com/beeee-ks/FIT3179/main/DV2/data_source/country_tweets_by_hour.csv"
    },
    "vconcat": [
      {
        "encoding": {
          "x": {
            "field": "time",
            "title": "Hour (24-hour Clock)"
          },
          "y": {
            "title": "Number of Tweets",
            "field": "status_id",
            "type": "quantitative"
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "Continent_Name", "type": "nominal", "title": "Continent"},
            {"field": "status_id", "type": "quantitative", "title": "Number of Tweets"},
            {"field": "time", "type": "quantitative", "title": "Hour in the Day"}
          ],
          "size": {
            "title": "Is a Reply",
            "field": "reply_to_status_id",
            "type": "quantitative"
          },
          "opacity": {"value": 0.8},
          "color": {
            "condition": {
              "selection": "brush",
              "title": "Continent",
              "field": "Continent_Name",
              "type": "nominal",
              "scale": {
                "domain": ["Asia", "Africa", "Antarctica", "Oceania", "Europe", "North America", "South America"],
                "range": ["#e63946", "#ffd500", "#001427", "#e5989b", "#f48c06", "#3d85c6","#2b9348"]
              }
            },
            "value": "gray"
          }
        },
        "width": 800,
        "height": 600,
        "mark": "circle",
        "selection": {"brush": {"encodings": ["x"], "type": "interval"}},
        "transform": [{"filter": {"selection": "click"}}]
      },
      {
        "encoding": {
          "color": {
            "condition": {
              "selection": "click",
              "field": "Continent_Name",
              "scale": {
                "domain": ["Asia", "Africa", "Antarctica", "Oceania", "Europe", "North America", "South America"]
              }
            },
            "value": "lightgray"
          },
          "x": {"field":"total_tweets", "title": "Total Number of Tweets", "scale": {"type": "linear"}},
          "y": {"title": "Continent", "field": "Continent_Name"},
          "tooltip": [
            {"field": "Continent_Name", "type": "nominal", "title": "Continent"},
            {"field": "total_tweets", "type": "quantitative", "title": "Total Number of Tweets"}
          ]
        },
        "width": 800,
        "mark": "bar",
        "selection": {"click": {"encodings": ["color"], "type": "multi"}},
        "transform": [{"filter": {"selection": "brush"}}]
      }
    ]
  }
  
  