{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Total Number of Tweets about COVID-19 in April 2020",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/beeee-ks/FIT3179/main/DV2/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/beeee-ks/FIT3179/main/DV2/data_source/test.csv"
        },
        "key": "country",
        "fields": ["total_tweets", "total_unique_user_ids", "created_at"]
      }
    },
    {      
      "filter": {
      "field": "created_at",
      "equal": "all"
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "total_tweets",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0, 10, 50, 100, 200, 500]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "country"},
      {"field": "total_tweets", "type": "quantitative"},
      {"field": "total_unique_user_ids", "type": "quantitative"},
      {"field": "created_at", "type": "nominal"}
    ]
  },
  "config": {}
}
