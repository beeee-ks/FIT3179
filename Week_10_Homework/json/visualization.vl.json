{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Goals Scored",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/beeee-ks/FIT3179/main/Week_10_Homework/data_source/fpl_players.csv"
  },
  "params": [
    {
      "name": "goals_selection",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 19,
        "step": 1,
        "name": "Goals Scored: "
      }
    },
    {
      "name": "position_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Defender",
          "Forward",
          "Goalkeeper",
          "Midfielder"
        ],
        "labels":[
          "Show All",
          "Defender",
          "Forward",
          "Goalkeeper",
          "Midfielder"
        ],
        "name": "Position: "
      }
    }
  ],
  "transform": [
    {"filter": {"field": "teamId", "equal": "Liverpool"}},
    {"filter": "position_selection == null || datum.position == position_selection"},
    {"filter": "datum.goals_scored >= goals_selection"}
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "goals_scored",
      "type": "quantitative",
      "title": "Total Goals Scored"
    },
    "y": {
      "field": "assists",
      "type": "quantitative",
      "title": "Total Assists"
    },
    "color": {
      "field": "position",
      "type": "nominal",
      "title": "Position"
    },
    "size": {
      "field": "minutes",
      "type": "quantitative",
      "title": "Minutes Played"
    },
    "tooltip": [
      {"field": "name", "type": "nominal", "title": "Name"},
      {"field": "position", "type": "nominal", "title": "Position"},
      {"field": "goals_scored", "type": "quantitative", "title": "Total Goals Scored"},
      {"field": "assists", "type": "quantitative", "title": "Total Assists"},
      {"field": "minutes", "type": "quantitative", "title": "Minutes Played"},
      {"field": "yellow_cards", "type": "quantitative", "title": "Total Yellow Cards"},
      {"field": "red_cards", "type": "quantitative", "title": "Total Red Cards"}
    ]
  }
}
